<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Task Title"
        android:layout_marginTop="6dp"

        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/deleteRow"
        android:layout_toRightOf="@+id/checkboxTaskRow"
        android:layout_toEndOf="@+id/checkboxTaskRow" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:text="@string/dummyTaskString"
        android:id="@+id/Description"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxTaskRow"
        android:layout_above="@+id/Description"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="25dp"
        android:alpha="0.4"
        android:layout_height="25dp"
        android:background="@drawable/ic_delete_black_24dp"
        android:id="@+id/deleteRow"

        android:layout_above="@+id/Description"
        android:maxLines="1"
        android:layout_alignRight="@+id/Description"
        android:layout_alignEnd="@+id/Description" />

</RelativeLayout>