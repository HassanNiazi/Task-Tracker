<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signnbackground"

    tools:context="com.example.hash.todoapp.SignIn">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note_down"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="55sp"
        android:id="@+id/appTitleLoginPage_SignIn"
        android:fontFamily="cursive"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_centerVertical="false"

        />


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:id="@+id/TextViewFirebaseImage"
        android:text="@string/powered_by"
        android:layout_alignBottom="@+id/imageViewFirebase"
        android:layout_toLeftOf="@+id/imageViewFirebase"
        android:layout_toStartOf="@+id/imageViewFirebase"
        android:layout_marginBottom="30dp" />

    <ImageView

        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/image00"
        android:id="@+id/imageViewFirebase"
        android:contentDescription="@string/firebase"
        android:layout_marginBottom="9dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/appTitleLoginPage_SignIn"
        android:layout_alignEnd="@+id/appTitleLoginPage_SignIn"
        android:layout_marginRight="29dp"
        android:layout_marginEnd="29dp" />

    <com.google.android.gms.common.SignInButton

        android:id="@+id/signInButton_SignIn"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginBottom="27dp"

        android:layout_above="@+id/imageViewFirebase"
        android:layout_centerHorizontal="true">

    </com.google.android.gms.common.SignInButton>


</RelativeLayout>
